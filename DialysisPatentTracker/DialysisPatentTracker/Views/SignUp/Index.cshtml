<!-- **********  CSS  *****************-->
<style>
    hr {
        margin-top: 5%;
    }

    h2 {
        text-align: center;
        padding-top: 3px;
        padding-bottom: 40px;
        margin-left: 250px;
        margin-right: 250px;
        color: yellow;
    }

    input, input[placeholder] {
        text-align: center;
        background-color: midnightblue;
        border-radius: 40%;
        border: none;
    }

    form {
        border: solid rgba(255, 255, 26,.8) 4px;
        border-radius: 20%;
        background: rgba(40, 37, 141, .5);
        padding-bottom: 50px;
        padding-top: 10px;
        margin-left: 250px;
        margin-right: 250px;
    }

    .form {
        margin-top: 50px;
    }
</style>

<!-- **********  HTML  *****************-->
<div class="form">
    <form asp-controller="LogIn" asp-action="Index" method="post">
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <h2>SignUp</h2>
                <label for="firstName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="firstName" placeholder="First Name">
                </div>
            </div>
        </div><!------------------- end of firstName input  ---------------------->
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label for="lastName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="lastName" placeholder="Last Name">
                </div>
            </div>
        </div><!------------------- end of lastname input  ---------------------->
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label for="email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="email" placeholder="E-Mail">
                </div>
            </div>
        </div><!------------------- end of Emailinput  ---------------------->
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label for="userName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="userName" placeholder="User Name">
                </div>
            </div>
        </div><!------------------- end of Useer Name input  ---------------------->

        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label for="password3" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password3" placeholder="Password">
                </div>
            </div>
        </div><!------------------- end of password  input  ---------------------->
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label for="confirm" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="confirm" placeholder="Confirm Password">
                </div>
            </div>
        </div><!------------------- end of Comfirm password  input  ---------------------->
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input style="background-color:yellow; color:midnightblue; border-radius:50%" type="submit" class="form-control" value="Sign Up">
                </div>
            </div>
        </div>
    </form>
</div>