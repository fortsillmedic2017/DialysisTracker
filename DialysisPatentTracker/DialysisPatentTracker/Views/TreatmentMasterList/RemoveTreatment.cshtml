<div class="pageForm">
    <h2>@ViewBag.title</h2>
    <form asp-controller="PatientMasterList" asp-action="RemovePatient" method="post">
        @foreach (var patientTreatment in ViewBag.patientTreatmentList)
        {<div class="form-group row">
                <div>
                    <input type="checkbox" name="patientIds" id="@patientTreatment.PatientId" value="@patientTreatment.PatientId" /><!--PatientId from(Model)-->
                    <label for="@patientTreatment.PatientId">@patientTreatment.LastName, @patientTreatment.FirstName (MRN:@patientTreatment.MedicalRecord)</label>
                </div>
            </div>
        }
        <div>
            <input style="background-color:yellow; color:midnightblue; border-radius:50%" type="submit" class="form-control" value="Remove Patient">
        </div>
    </form>
</div>