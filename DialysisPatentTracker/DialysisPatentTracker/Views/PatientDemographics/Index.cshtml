<h1>Patient DemoGraphics</h1>

<table class="table">
    <thead>
        <tr>
            <th>Medical Record#</th>
            <th>Last name</th>
            <th>First Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>E_Mail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in ViewBag.patientDemographics)
        {
            <tr>
            <td>@patient.MedicalRecord</td>
            <td>@patient.LastName</td>
            <td>@patient.FirstName</td>
            <td>@patient.Age</td>
            <td>@patient.Gender</td>
            <td>@patient.Address</td>
            <td>@patient.PhoneNumber</td>
            <td>@patient.Email</td>
            </tr>
        }
            </tbody>
</table>

@if (ViewBag.patientDemographics.Count == 0)
{
