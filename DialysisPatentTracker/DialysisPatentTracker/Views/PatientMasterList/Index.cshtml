<html>
<head>
    <style>
        #nav-bar2 {
            margin-left: 1050px;
            margin-right: 10px;
        }

        h1 {
            border: yellow solid 2px;
            text-align: center;
            padding: 20px 5px;
            margin-top: 50px;
            margin-bottom: 0px;
            background-color: navy;
            color: yellow;
            margin-top: 50px;
        }

        table {
            border: solid 2px yellow;
            align-content: center;
            background: rgba(37, 37, 141, .7);
        }

        th {
            color: yellow;
            border: solid 2px yellow;
            background-color: darkmagenta;
            text-align: center;
        }

        tr {
            border: solid 2px darkslategray;
            text-align: center;
            background: rgba(40, 37, 141, .8);
            color: snow;
        }

        td {
            color: white;
            text-align: center;
            border: solid 2px yellow;
        }

        hr {
            border: none;
            height: 3px;
            background-color: midnightblue;
            margin-top: 100px;
        }
        a{
            color:white;
        }
        a:hover{
            color:yellow;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color:midnightblue">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a style="color:yellow" asp-area="" asp-controller="LogIn" asp-action="Index" class="navbar-brand">Dialysis Patient Tracker</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a style="color:snow" asp-area="" asp-controller="SearchOptions" asp-action="Index">Patient Search Options</a></li>
                    <li><a style="color:snow" asp-area="" asp-controller="PatientMasterList" asp-action="PatientDemoGraphics">Patient DemoGraphics</a></li>
                    <li><a style="color:snow" asp-area="" asp-controller="PatientMasterList" asp-action="TreatmentMasterList">Treatment Master List</a></li>
                    <li><a style="color:snow" asp-area="" asp-controller="PatientMasterList" asp-action="AddPatient">Add Patient</a></li>
                </ul>

                <ul id="nav-bar2" , class="navbar-collapse collapse">
                    <li><a style="color:yellow" asp-area="" asp-controller="LogIn" asp-action="Index">Login</a></li>
                    <li><a style="color:yellow" asp-area="" asp-controller="SignUp" asp-action="Index">Sign Up</a></li>
                    <li><a style="color:yellow" asp-area="" asp-controller="LogOut" asp-action="Index">Log Out</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <h1>Patient Master List</h1>

    <table class="table">

        <!--  ************TOD DO !! Have to program table to fill in with inputs ********************-->

        <thead>
            <tr>
                <th>Medical Record #</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Physician</th>
                <th>Traetment<br />Days</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in ViewBag.patientMasterList)
            {
                <tr>
                    <td><a asp-controller="PatientMasterList" asp-action="TreatmentMasterList">@patient.PatientId</a></td>
                    <td><a asp-cotroller="PatientMasterList" asp-action="TreatmentMasterList">@patient.LastName</a></td>
                    <td><a asp-cotroller="PatientMasterList" asp-action="TreatmentMasterList">@patient.FirstName</a></td>
                    <td><a asp-cotroller="PatientMasterList" asp-action="TreatmentMasterList">@patient.Physician</a></td>
                    <td><a asp-cotroller="PatientMasterList" asp-action="TreatmentMasterList">@patient.TreatmentDays</a></td>
                    <td><a asp-cotroller="PatientMasterList" asp-action="TreatmentMasterList">@patient.Comments</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>