<div class="pageForm">
    <h2>@ViewBag.title</h2>
    <form asp-controller="PatientMasterList" asp-action="RemovePatient" method="post">
        @foreach (var patient in ViewBag.patientMasterList)
        {<div class="form-group row">
                <div>
                    <input type="checkbox" name="patientIds" id="@patient.PatientId" value="@patient.PatientId" /><!--PatientId from(Model)-->
                    <label for="@patient.PatientId">@patient.LastName , @patient.FirstName;</label>
                </div>
            </div>
        }
        <div class="form-group row">
            <div class="col-lg-12 my-1">
                <label class="col-sm-5 col-form-label"></label>
