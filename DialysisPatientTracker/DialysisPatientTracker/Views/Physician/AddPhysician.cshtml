@model DialysisPatientTracker.ViewModels.AddPhysicianViewModel

@{
    ViewData["Title"] = "Edit";
}
<hr />

<div class="row">
    <div class="form col-lg-8 col-lg-offset-2">
        <h2>Add Physician Information</h2>
        <form asp-action="AddPhysician">
            <div asp-validation-summary="ModelOnly" class="validationMessage"></div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="validationMessage"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="validationMessage"></span>
            </div>
            <div class="form-group">
                <label asp-for="CellPhone" class="control-label"></label>
                <input asp-for="CellPhone" class="form-control" />
                <span asp-validation-for="CellPhone" class="validationMessage"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfficePhone" class="control-label"></label>
                <input asp-for="OfficePhone" class="form-control" />
                <span asp-validation-for="OfficePhone" class="validationMessage"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
            <div>
                <a asp-action="Index" class="signUp">Back to List</a>
            </div>
        </form>
    </div>
</div>