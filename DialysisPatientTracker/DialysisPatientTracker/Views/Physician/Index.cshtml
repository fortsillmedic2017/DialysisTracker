@model List<DialysisPatientTracker.Models.Physician>

@{
    ViewData["Title"] = "Index";
}

<h2>Physician Information List</h2>

<table class="table">
    <thead>
        <tr>
            <th>LastName</th>
            <th>FirstName</th>
            <th>CellPhone</th>
            <th>OfficePhone</th>
            <th>Details</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var physician in Model)
        {
            <tr>
                <td>@physician.LastName</td>
                <td>@physician.FirstName</td>
                <td>@physician.CellPhone</td>
                <td>@physician.OfficePhone</td>
                <td>
                    <a asp-controller="PatientMasterList" asp-action="Index">Patient List</a>
                    @*<a asp-controller="CompleteList" asp-action="Delete" asp-route-id="@physician.PhysicianID">Treatment </a>
                        </td>*@

                <td>
                    <a asp-action="Edit" asp-route-id="@physician.PhysicianID">Edit</a>|
                    <a asp-action="AddPhysician" asp-route-id="@physician.PhysicianID">Add </a>|
                    <a asp-action="Delete" asp-route-id="@physician.PhysicianID">Delete </a>
            </tr>
        }
    </tbody>
</table>
@if (Model.Count == 0)
{

    <p style="color:yellow">This physician is not on the List Yet. </p>
    <p style="color:yellow">
        Click <a asp-controller="Physician" asp-action="AddPhysician"><span style="color:cyan">Here</span></a> to Add Physician.
    </p>
    <p style="color:yellow">
        Click <a asp-controller="PatientMasterList" asp-action="Index"><span style="color:cyan">Here</span></a> to return to Patient List.
    </p>
};
<p>
    <a asp-controller="PatientMasterList" asp-action="Index">Back to Patient List</a>
</p>