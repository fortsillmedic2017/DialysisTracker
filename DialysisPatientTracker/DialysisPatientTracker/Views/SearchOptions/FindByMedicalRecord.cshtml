@model List<DialysisPatientTracker.Models.PatientMasterList>
 

<h1>List By Last Name</h1>

<table class="table">

    <!--  ************TOD DO !! Have to ********************-->

    <thead>
        <tr>
            <th>Medical Record #</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Physician</th>
            <th>Treatment<br />Days</th>
            <th>Comments</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td><a asp-controller="PatientMasterList" asp-action="IndivPatient">@patient.MedicalRecord</a></td>
                <td><a asp-controller="PatientMasterList" asp-action="IndIvPatient">@patient.LastName</a></td>
                <td>@patient.FirstName</td>
                <td>@patient.Physician</td>
                <td>@patient.TreatmentDays</td>
                <td>@patient.Comments</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <p style="color:yellow">There are no patients in the list yet.</p>
};
