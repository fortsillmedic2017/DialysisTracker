@model DialysisPatientTracker.ViewModels.AddSearchOptionsViewModel

<h4>@ViewBag.Message</h4>

<div class="form col-lg-7 col-lg-offset-2">
    <h2>Patient Search Options</h2><!--********* h2 tag ***********-->

    <form asp-controller="SearchOptions" asp-action="FindByMedicalRecord" method="get">
        <div class="form-group row">
            <div class="col-sm-12 col">
                <div class="col-sm-2">
                    <label class="col-sm-4 col-form-label" for="MedicalRecord">Search By:</label>
                </div>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="search" id="MedicalRecord" placeholder="Medical Record#">
                    <span class="validationMessage" asp-validation-for="MedicalRecord"></span>
                </div>
                <div class="col-sm-2">
                    <input id="search-button" type="submit" value="Search">
                </div>
            </div>
        </div>
        <!----------------- end of medicalRecord# input  -------------------->
    </form>
    <form asp-controller="SearchOptions" asp-action="FindByLastName" method="get">
        <div class="form-group row">
            <div class="col-lg-12 my-1">
                <div class="col-sm-2">
                    <label class="col-sm-4 col-form-label" for="LastName">Search By:</label>
                </div>
                <div class="col-sm-8">
                    <input class="form-control" for="LastName" name="search" placeholder="Last Name">
                    <span class="validationMessage" asp-validation-for="LastName"></span>
                </div>
                <div class="col-sm-2">
                    <input id="search-button" type="submit" value="Search">
                </div>
            </div>
        </div><!------------------- end of LastName input  ---------------------->
    </form>
    <form asp-controller="SearchOptions" asp-action="FindByPhysician" method="get">
        <div class="form-group row">
            <div class="col-lg-12 my-1">
                <div class="col-sm-2">
                    <label class="col-sm-4 col-form-label" for="Physician">Search By:</label>
                </div>
                <div class="col-sm-8">
                    <input class="form-control" name="search" for="Physician" placeholder="Physician">
                    <span class="validationMessage" asp-validation-for="Physician"></span>
                </div>
                <div class="col-sm-2">
                    <input id="search-button" type="submit" value="Search">
                </div>
            </div>
        </div><!------------------- end of Physician input  ---------------------->
    </form>
</div>