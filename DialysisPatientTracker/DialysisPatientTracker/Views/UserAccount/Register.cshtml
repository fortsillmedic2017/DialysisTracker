<!-- **********  CSS  *****************-->
<style>
    hr {
        margin-top: 5%;
    }

    h2 {
      
        padding-top: 3px;
        padding-bottom: 40px;
        margin-left: 250px;
        margin-right: 250px;
        color: yellow;
    }

    label {
        color: yellow;
    }

    input, input[placeholder] {
        text-align: center;
        background-color: midnightblue;
        border-color: white;
    }

    form {
        border: solid rgba(255, 255, 26,.8) 4px;
        border-radius: 20%;
        background: rgba(40, 37, 141, .5);
        padding-bottom: 50px;
        padding-top: 10px;
        margin-left: 250px;
        margin-right: 250px;
    }

    .form {
        margin-top: 50px;
    }

    .validationMessage {
        color: yellow;
        text-shadow: black 0.1em 0.1em 0.2em;
    }
</style>

<!-- **********  End of Css  *****************-->

@model DialysisPatientTracker.ViewModels.AddUserAccountViewModel;

<div class="form">
    <form asp-controller="UserAccount" asp-action="Register" method="post">
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <div><h2>SignUp</h2></div> <!--****  Title*******-->
                <label class="col-sm-2 col-form-label" asp-for="FirstName"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FirstName" placeholder="First Name">
                    <span class="validationMessage" asp-validation-for="FirstName"></span>
                </div>
            </div>
        </div><!------------------- end of firstName input  ---------------------->
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label class="col-sm-2 col-form-label" asp-for="LastName"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="LastName" placeholder="Last Name">
                    <span class="validationMessage" asp-validation-for="LastName"></span>
                </div>
            </div>
        </div><!------------------- end of last name input  ---------------------->
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label class="col-sm-2 col-form-label" asp-for="Email"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Email" placeholder="E-Mail">
                    <span class="validationMessage" asp-validation-for="Email"></span>
                </div>
            </div>
        </div><!------------------- end of Email input  ---------------------->
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label class="col-sm-2 col-form-label" asp-for="UserName"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="UserName" placeholder="User Name">
                    <span class="validationMessage" asp-validation-for="UserName"></span>
                </div>
            </div>
        </div><!------------------- end of User Name input  ---------------------->

        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label class="col-sm-2 col-form-label" asp-for="Password"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Password" placeholder="Password">
                    <span class="validationMessage" asp-validation-for="Password"></span>
                </div>
            </div>
        </div><!------------------- end of password  input  ---------------------->
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label class="col-sm-2 col-form-label" asp-for="ConfirmPassword"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                    <span class="validationMessage" asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
        </div><!------------------- end of Confirm password  input  ---------------------->
        <div class="form-group row">
            <div class="col-lg-10 my-1">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input style="background-color:yellow; color:midnightblue; border-radius:50%" type="submit" class="form-control" value="Sign Up">
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}