@model DialysisPatientTracker.ViewModels.AddUserAccountViewModel

@{
    ViewData["Title"] = "Add Patient Information";
}
<hr />

<div class="form col-lg-4 col-lg-offset-4">
    <h2>LogIn</h2>
    <form asp-controller="UserAccount" asp-action="LogIn" method="post">
        <div class="form-group col-form-label-6">
            <label class="col-sm-2 col-form-label" asp-for="UserName"></label>
            <input class="form-control" id="password" asp-for="UserName " placeholder="UserName">
            <span class="validationMessage" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-label" asp-for="Password"></label>
            <input class="form-control" id="password" asp-for="Password " placeholder="Password">
            <span class="validationMessage" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="LogIn" class="btn btn-default" />
        </div>
        <div>
            <a asp-controller="UserAccount" asp-action="Register">Register</a>
        </div>
    </form>
</div>

