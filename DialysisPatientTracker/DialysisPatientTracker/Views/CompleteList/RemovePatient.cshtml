@model List<DialysisPatientTracker.Models.CompleteList>

<h2 class="row">@ViewBag.title</h2>
<div class="form">
    
    <form asp-controller="CompleteList" asp-action="RemovePatient" method="post">
        @foreach (var patient in ViewBag.completeList)
        {<div class="form-group row">
                <div class="form-control">
                    <input type="checkbox" name="patientIds" id="@patient.CompleteListID" value="@patient.CompleteListID" /><!--ID from(Model)-->
                    <label for="@patient.CompleteListID">@patient.LastName, @patient.FirstName (MRN:@patient.MedicalRecord)</label>
                </div>
            </div>
        }

        <div class="form-group">
            <input type="submit" value="Remove Patient" class="btn btn-default" />
        </div>
    </form>

