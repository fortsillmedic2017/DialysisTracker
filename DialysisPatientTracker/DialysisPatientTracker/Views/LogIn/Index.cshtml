@model DialysisPatientTracker.ViewModels.AddLogInViewModel;

<div class="form-group">
</div>

<form asp-controller="LogIn" asp-action="Index" method="post">
    <div class="form-group row">
        <div class="col-lg-10 my-1">
            <h1>LogIn</h1> <!-- *********  Title  ******-->
            <label class="col-sm-2 col-form-label" asp-for="UserName"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="UserName" placeholder="User Name">
                <span class="validationMessage" asp-validation-for="UserName"></span>
            </div>
        </div>
    </div><!------------------- end of Useer Name input  ---------------------->

    <div class="form-group row">
        <div class="col-lg-10 my-1">
            <label class="col-sm-2 col-form-label" asp-for="Password"></label>
            <div class="col-sm-10">
                <input class="form-control" id="password" asp-for="Password " placeholder="Password">
                <span class="validationMessage" asp-validation-for="Password"></span>
            </div>
        </div>
    </div><!------------------- end of password  input  ---------------------->

    <div class="form-group row">
        <div class="col-lg-10 my-1">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input style="background-color:yellow; color:midnightblue; border-radius:50%" type="submit" class="form-control" value="LogIn">
            </div>
        </div>
    </div>
</form>